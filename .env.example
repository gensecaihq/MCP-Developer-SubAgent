# Claude Code SDK Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# Optional: Alternative authentication methods

# AWS Bedrock (if using Claude via AWS)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# BEDROCK_MODEL_ID=anthropic.claude-3-opus-20240229-v1:0

# Google Vertex AI (if using Claude via Google Cloud)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# VERTEX_PROJECT_ID=your-project-id
# VERTEX_LOCATION=us-central1

# MCP Development Settings
MCP_VALIDATION=strict
QUALITY_GATES=planning,protocol,security,implementation,testing,performance,documentation
AUTO_ACTIVATE_AGENTS=true
SAVE_WORKFLOW_STATE=true

# Hook Settings
HOOKS_ENABLED=true
HOOKS_LOG_LEVEL=INFO
HOOKS_TIMEOUT=30000

# GitHub Integration
# GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN
# GITHUB_APP_ID=your-app-id
# GITHUB_APP_PRIVATE_KEY=/path/to/private-key.pem

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=30